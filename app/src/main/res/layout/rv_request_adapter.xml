<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/default_user"/>
                <TextView
                    android:id="@+id/txt_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:textColor="#3D464B"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/calibri"
                    android:layout_toRightOf="@+id/img_profile"/>

                <Button
                    android:id="@+id/btn_accept"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:hint="Accept"
                    android:textSize="12sp"
                    android:textColorHint="@color/color_white"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/img_profile"
                    android:layout_below="@+id/txt_user_name"
                    android:fontFamily="@font/calibri"
                    android:background="@drawable/rounded_button"/>
                <Button
                    android:id="@+id/btn_reject"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:hint="Decline"
                    android:textSize="12sp"
                    android:textColorHint="@color/color_white"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_button"
                    android:layout_toRightOf="@+id/btn_accept"
                    android:fontFamily="@font/calibri"
                    android:layout_below="@+id/txt_user_name"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txt_accept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accept"
                    android:textSize="14sp"
                    android:textColor="#3D464B"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@mipmap/accept_request"
                    android:drawablePadding="5dp"/>
                <TextView
                    android:id="@+id/txt_reject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Decline"
                    android:textSize="14sp"
                    android:textColor="#3D464B"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/txt_accept"
                    android:drawableLeft="@mipmap/cancel_request"
                    android:drawablePadding="5dp"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


   <!-- <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"></View>-->

</LinearLayout>