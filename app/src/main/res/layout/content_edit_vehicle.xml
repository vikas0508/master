<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:stripe="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PaymentActivity"
    tools:showIn="@layout/activity_edit_vehicle">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE">
        <com.stripe.android.view.CardMultilineWidget
            android:id="@+id/card_multiline_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:shouldShowPostalCode="false"
            android:visibility="gone"
            />
        <LinearLayout
            android:id="@+id/ll_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/profile_tab_layout"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
               android:orientation="horizontal">
               <EditText
                   android:id="@+id/edt_one"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:background="@null"
                   android:digits="0123456789"
                   android:gravity="center_vertical"
                   android:hint="xxxx"
                   android:textColor="@color/color_Black"
                   android:inputType="phone"
                   android:maxLength="4"
                   android:focusable="true"
                   android:singleLine="true"
                   android:drawablePadding="6dp"
                   android:padding="10dp"
                   android:fontFamily="@font/calibri"
                   android:drawableLeft="@mipmap/creditcard"/>
               <EditText
                   android:id="@+id/edt_two"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:background="@null"
                   android:digits="0123456789"
                   android:gravity="center_vertical"
                   android:hint="xxxx"
                   android:textColor="@color/color_Black"
                   android:inputType="phone"
                   android:maxLength="4"
                   android:focusable="true"
                   android:singleLine="true"
                   android:padding="10dp"
                   android:fontFamily="@font/calibri"
                   android:layout_marginLeft="0dp"/>
               <EditText
                   android:id="@+id/edt_three"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:background="@null"
                   android:digits="0123456789"
                   android:gravity="center_vertical"
                   android:hint="xxxx"
                   android:textColor="@color/color_Black"
                   android:inputType="phone"
                   android:maxLength="4"
                   android:focusable="true"
                   android:singleLine="true"
                   android:padding="10dp"
                   android:fontFamily="@font/calibri"
                   android:layout_marginLeft="0dp"/>
               <EditText
                   android:id="@+id/edt_four"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:background="@null"
                   android:digits="0123456789"
                   android:gravity="center_vertical"
                   android:hint="xxxx"
                   android:textColor="@color/color_Black"
                   android:inputType="phone"
                   android:maxLength="4"
                   android:focusable="true"
                   android:singleLine="true"
                   android:padding="10dp"
                   android:fontFamily="@font/calibri"
                   android:imeOptions="actionNext"
                   android:layout_marginLeft="0dp"/>
           </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/profile_tab_layout"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/edt_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:digits="0123456789"
                        android:gravity="center_vertical"
                        android:hint="Expiry month"
                        android:textColor="@color/color_Black"
                        android:inputType="phone"
                        android:maxLength="2"
                        android:focusable="true"
                        android:singleLine="true"
                        android:drawablePadding="6dp"
                        android:padding="10dp"
                        android:fontFamily="@font/calibri"
                        android:imeOptions="actionNext"
                        android:drawableLeft="@mipmap/calender"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/profile_tab_layout"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/edt_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:digits="0123456789"
                        android:gravity="center_vertical"
                        android:hint="Expiry year"
                        android:textColor="@color/color_Black"
                        android:inputType="phone"
                        android:maxLength="4"
                        android:focusable="true"
                        android:singleLine="true"
                        android:padding="10dp"
                        android:drawablePadding="6dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/calibri"
                        android:imeOptions="actionNext"
                        android:drawableLeft="@mipmap/calender"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_tab_layout"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/edt_cvc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:digits="0123456789"
                    android:gravity="center_vertical"
                    android:hint="CVC"
                    android:textColor="@color/color_Black"
                    android:inputType="phone"
                    android:maxLength="3"
                    android:focusable="true"
                    android:singleLine="true"
                    android:drawablePadding="6dp"
                    android:padding="10dp"
                    android:fontFamily="@font/calibri"
                    android:imeOptions="actionNext"
                    android:drawableLeft="@mipmap/cvc"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_tab_layout"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/edt_postal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:digits="0123456789"
                    android:gravity="center_vertical"
                    android:hint="Postal code (Optional)"
                    android:textColor="@color/color_Black"
                    android:inputType="phone"
                    android:maxLength="6"
                    android:focusable="true"
                    android:singleLine="true"
                    android:drawablePadding="6dp"
                    android:padding="10dp"
                    android:fontFamily="@font/calibri"
                    android:drawableLeft="@mipmap/postalcode"/>

            </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Submit"
            android:textSize="16sp"
            android:textColorHint="@color/color_white"
            android:background="@drawable/rounded_blue_button"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/calibri"
            android:layout_below="@+id/ll_card"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>