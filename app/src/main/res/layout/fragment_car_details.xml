<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EFEFF1">
            <ImageView
                android:id="@+id/img_car"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:src="@mipmap/photo_car"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="210dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:elevation="2dp"
                android:background="@drawable/card_layout">
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:id="@+id/txt_car_name"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Car name: XUV"
                       android:textSize="16sp"
                       android:layout_marginLeft="10dp"
                       android:layout_marginTop="10dp"
                       android:fontFamily="@font/calibri"
                       android:textColor="@color/colorPrimary"/>

                   <TextView
                       android:id="@+id/txt_car_price"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_below="@+id/txt_car_name"
                       android:layout_marginLeft="10dp"
                       android:layout_marginTop="5dp"
                       android:text="Price:$20-$30"
                       android:textColor="@color/color_Black"
                       android:fontFamily="@font/calibri"
                       android:textSize="14sp" />
                   <TextView
                       android:id="@+id/txt_rent_type"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Rent type: Hourly"
                       android:textSize="14sp"
                       android:layout_marginLeft="10dp"
                       android:layout_marginTop="5dp"
                       android:fontFamily="@font/calibri"
                       android:layout_below="@+id/txt_car_price"
                       android:textColor="@color/color_Black"/>
                   <Button
                       android:id="@+id/btn_send_request"
                       android:layout_width="100dp"
                       android:layout_height="35dp"
                       android:hint="Send Request"
                       android:textSize="14sp"
                       android:textColorHint="@color/color_white"
                       android:background="@color/colorPrimary"
                       android:layout_marginRight="10dp"
                       android:layout_marginTop="10dp"
                       android:gravity="center"
                       android:fontFamily="@font/calibri"
                       android:layout_alignParentRight="true"/>
               </RelativeLayout>

                <TextView
                    android:id="@+id/txt_overview"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Overview"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/calibri"
                    android:background="@color/color_lightgray"
                    android:textColor="@color/color_Black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/img_map"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="3dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/location"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location"
                            android:textSize="12sp"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginTop="0dp"
                            android:fontFamily="@font/calibri"
                            android:layout_below="@+id/img_map"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/img_fuel"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="3dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/fuel"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fuel"
                            android:textSize="12sp"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/calibri"
                            android:layout_below="@+id/img_fuel"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/img_available"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="3dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/avilibilty"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Availabilty"
                            android:textSize="12sp"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/calibri"
                            android:layout_below="@+id/img_available"/>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/txt_specification"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Specification"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="0dp"
                        android:fontFamily="@font/calibri"
                        android:background="@color/color_lightgray"
                        android:textColor="@color/color_Black"/>
                    <TextView
                        android:id="@+id/txt_no_seats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/calibri"
                        android:layout_below="@+id/txt_car_price"
                        android:drawableLeft="@mipmap/seet"
                        android:drawablePadding="6dp"
                        android:textColor="@color/color_Black"/>

                    <TextView
                        android:id="@+id/txt_variant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/txt_car_price"
                        android:drawableLeft="@mipmap/varient"
                        android:drawablePadding="6dp"
                        android:fontFamily="@font/calibri"
                        android:textColor="@color/color_Black"/>

                    <TextView
                        android:id="@+id/txt_insurance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/txt_car_price"
                        android:drawableLeft="@mipmap/insurence"
                        android:drawablePadding="6dp"
                        android:fontFamily="@font/calibri"
                        android:textColor="@color/color_Black"/>

                    <Button
                        android:id="@+id/btn_make_payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Make payment"
                        android:textColorHint="@color/color_white"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="80dp"
                        android:fontFamily="@font/calibri"
                        android:background="@drawable/rounded_blue_button"/>

                </LinearLayout>



            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</LinearLayout>