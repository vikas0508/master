<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:id="@+id/ll_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_profile_message"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/demo"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.6"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Michelle"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/calibri"
                        android:layout_toLeftOf="@+id/txt_update_time"
                        />
                    <TextView
                        android:id="@+id/txt_update_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:00 AM"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/calibri"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_lastmsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You : What's  your location?"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:lines="1"
                    android:fontFamily="@font/calibri"
                    android:ellipsize="end"
                    android:gravity="top" />

            </LinearLayout>

            <!--    <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/txt_msg_count"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="15sp"
                        android:fontFamily="@font/calibri"
                        android:textColor="@android:color/white"
                        android:background="@drawable/blue_round_button"
                        android:gravity="center"
                        android:padding="5dp"
                        android:visibility="gone"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>-->

        </LinearLayout>
    </androidx.cardview.widget.CardView>

<!--    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@android:color/darker_gray"></View>-->



</LinearLayout>