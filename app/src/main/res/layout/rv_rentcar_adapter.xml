<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:id="@+id/ll_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#DEDEDE">
                <TextView
                    android:id="@+id/txt_car_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XUV"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/calibri"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:id="@+id/txt_avl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Availability:"
                            android:textSize="14sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/calibri"
                            />
                        <TextView
                            android:id="@+id/txt_avilable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hourly/daily/weekly"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_toRightOf="@+id/txt_avl"
                            android:lines="1"
                            android:layout_marginLeft="5dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/calibri"
                            android:gravity="top" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp">
                        <TextView
                            android:id="@+id/txt_loc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location:"
                            android:textSize="14sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/calibri"
                            />
                        <TextView
                            android:id="@+id/txt_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chicago,USA"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_toRightOf="@+id/txt_loc"
                            android:lines="1"
                            android:layout_marginLeft="5dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/calibri"
                            android:gravity="top" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp">
                        <TextView
                            android:id="@+id/txt_rent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rent type:"
                            android:textSize="14sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/calibri"
                            />
                        <TextView
                            android:id="@+id/txt_rent_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hourly"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_toRightOf="@+id/txt_rent"
                            android:lines="1"
                            android:layout_marginLeft="5dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/calibri"
                            android:gravity="top" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp">
                        <TextView
                            android:id="@+id/txt_mils"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Distance:"
                            android:textSize="14sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/calibri"
                            />
                        <TextView
                            android:id="@+id/txt_mils_car"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 miles"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_toRightOf="@+id/txt_mils"
                            android:lines="1"
                            android:layout_marginLeft="5dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/calibri"
                            android:gravity="top" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:visibility="visible"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_car_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/photo_car"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price:$30-$40"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:lines="1"
                android:ellipsize="end"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/calibri"
                android:gravity="top" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"></View>-->
</LinearLayout>