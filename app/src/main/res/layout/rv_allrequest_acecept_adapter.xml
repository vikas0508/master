<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:id="@+id/ll_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#DEDEDE"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/default_user"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:id="@+id/txt_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/calibri"
                           />
                        <TextView
                            android:id="@+id/txt_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$250"
                            android:textSize="16sp"
                            android:textColor="@color/color_Black"
                            android:layout_marginRight="10dp"
                            android:visibility="gone"
                            android:fontFamily="@font/calibri"
                            android:layout_alignParentRight="true" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jun 28,2019 9:00 PM"
                        android:textSize="12sp"
                        android:textColor="@color/color_Black"
                        android:layout_marginTop="0dp"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/calibri"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Source"
                    android:textAllCaps="true"
                    android:textSize="15sp"
                    android:textColor="#AEAFB1"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/calibri"/>
                <TextView
                    android:id="@+id/txt_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2536 Flying Taxicabs"
                    android:textSize="14sp"
                    android:textColor="#4D4D4D"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/calibri"
                    android:drawableLeft="@drawable/my_location"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorAccent"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Destination"
                    android:textAllCaps="true"
                    android:textSize="15sp"
                    android:textColor="#AEAFB1"
                    android:fontFamily="@font/calibri"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:id="@+id/txt_destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="105 wilian st.Chicago,Us"
                    android:textSize="14sp"
                    android:textColor="#4D4D4D"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/calibri"
                    android:drawableLeft="@drawable/map_pin"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>